
@{
    ViewData["Title"] = "Login";
    Layout = "_layout";
}

<!-- Login layout taken from https://mdbootstrap.com/docs/jquery/forms/basic/ -->
<form class="text-center border border-light p-5">

    <p class="h4 mb-4">Sign in</p>

    <a class="btn btn-info btn-block mx-auto my-4" asp-action="GitHubLogin">Log In With GitHub</a>

    <!-- Email -->
    <input type="email" id="defaultLoginFormEmail" class="form-control mx-auto my-4" style="width: 500px" placeholder="E-mail">

    <!-- Password -->
    <input type="password" id="defaultLoginFormPassword" class="form-control mx-auto my-4" style="width: 500px" placeholder="Password">

    <!-- Sign in button -->
    <button class="btn btn-info btn-block mx-auto my-4" style="width: 350px" type="submit">Sign in</button>

    <!-- Register -->
    <p>
        Not a member?
        <a asp-action="Register">Register</a>
    </p>

</form>
